<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.controlsfx.control.ToggleSwitch?>

<VBox alignment="TOP_CENTER" spacing="10.0" stylesheets="@../../../../../enigma/app/EnigmaApp.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="components.tabs.encryption.panels.encryption.EncryptionPanel">
   <children>
      <HBox alignment="TOP_CENTER">
         <children>
            <Button fx:id="resetToInitialConfigurationButton" mnemonicParsing="false" styleClass="reset-button" text="Reset To Initial Configuration">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
         </children>
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="TOP_CENTER">
         <children>
            <Label styleClass="info-label" text="Full Text" />
            <ToggleSwitch fx:id="encryptionModeToggleSwitch" HBox.hgrow="NEVER">
               <padding>
                  <Insets right="20.0" />
               </padding>
            </ToggleSwitch>
            <Label styleClass="info-label" text="Single Key" />
         </children>
         <padding>
            <Insets bottom="10.0" />
         </padding>
      </HBox>
      <StackPane alignment="TOP_CENTER" style="-fx-background-color: transparent;" stylesheets="@../../../../../enigma/app/EnigmaApp.css">
         <children>
            <fx:include fx:id="fullTextEncryption" source="modes/full/text/FullTextEncryption.fxml" />
            <fx:include fx:id="singleKeyEncryption" source="modes/single/key/SingleKeyEncryption.fxml" />
         </children>
      </StackPane>
   </children>
   <padding>
      <Insets left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
