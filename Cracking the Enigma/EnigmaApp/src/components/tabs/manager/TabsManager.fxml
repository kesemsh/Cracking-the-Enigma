<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox stylesheets="@../../../enigma/app/EnigmaApp.css" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="components.tabs.manager.TabsManager">
   <children>
      <HBox alignment="TOP_CENTER" spacing="10.0" VBox.vgrow="NEVER">
         <children>
          <Button fx:id="machineTabButton" alignment="CENTER" contentDisplay="CENTER" minWidth="125.0" mnemonicParsing="false" onAction="#selectMachineTab" styleClass="tab-button" text="Machine" />
            <Button fx:id="encryptionTabButton" alignment="CENTER" contentDisplay="CENTER" minWidth="125.0" mnemonicParsing="false" onAction="#selectEncryptionTab" styleClass="tab-button" text="Encrypt \ Decrypt" />
            <Button fx:id="bruteForceTabButton" alignment="CENTER" contentDisplay="CENTER" minWidth="125.0" mnemonicParsing="false" onAction="#selectBruteForceTab" styleClass="tab-button" text="Brute Force" />
         </children>
         <VBox.margin>
            <Insets left="5.0" right="5.0" top="5.0" />
         </VBox.margin>
      </HBox>
      <ScrollPane fitToHeight="true" fitToWidth="true" VBox.vgrow="ALWAYS">
         <content>
            <StackPane style="-fx-background-color: gray;">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <children>
                  <fx:include fx:id="machineTab" source="../machine/MachineTab.fxml" />
                  <fx:include fx:id="encryptionTab" source="../encryption/EncryptionTab.fxml" />
                  <fx:include fx:id="bruteForceTab" source="../brute/force/BruteForceTab.fxml" />
               </children>
            </StackPane>
         </content>
      </ScrollPane>
   </children>
</VBox>
