   <children>
        <Label styleClass="info-label" text="Please select your desired reflector:" wrapText="true">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <HBox alignment="CENTER_LEFT">
         <children>
            <Label alignment="TOP_LEFT" styleClass="sub-header-label" text="Reflector ID:">
