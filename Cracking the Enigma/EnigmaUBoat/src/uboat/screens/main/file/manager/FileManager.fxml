<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER_LEFT" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="uboat.screens.main.file.manager.FileManager">
    <children>
        <Button fx:id="loadMachineFromFileButton" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#loadMachineFromFile" styleClass="go-button" text="Load XML Machine File" HBox.hgrow="NEVER" />
        <Label minWidth="-Infinity" styleClass="sub-header-label" text="Current loaded file path:" HBox.hgrow="ALWAYS">
            <font>
                <Font name="System Bold" size="13.0" />
            </font>
        </Label>
        <TextField fx:id="loadedFilePathTextField" editable="false" focusTraversable="false" styleClass="info-label" minWidth="-Infinity" text="No file is loaded." HBox.hgrow="ALWAYS">
            <font>
                <Font name="System Italic" size="12.0" />
            </font>
        </TextField>
    </children>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
</HBox>
